# AmbilightUSB
SUBSYSTEM=="usb", ENV{DEVTYPE}=="usb_device",ATTR{idVendor}=="16c0" , ATTR{idProduct}=="05df", MODE="0777"

# Lightpack
SUBSYSTEM=="usb", ENV{DEVTYPE}=="usb_device",ATTR{idVendor}=="03eb" , ATTR{idProduct}=="204f", MODE="0777"

# USBtinyThermometer
SUBSYSTEM=="usb", ENV{DEVTYPE}=="usb_device",ATTR{idVendor}=="6666" , ATTR{idProduct}=="0200", MODE="0777"

# UsbAsp
SUBSYSTEM=="usb", ENV{DEVTYPE}=="usb_device",ATTR{idVendor}=="16c0" , ATTR{idProduct}=="05dc", MODE="0777"

# Atmel Flip DFU
SUBSYSTEM=="usb", ENV{DEVTYPE}=="usb_device",ATTR{idVendor}=="03eb" , ATTR{idProduct}=="2ffa", MODE="0777"

